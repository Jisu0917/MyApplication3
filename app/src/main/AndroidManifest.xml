<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.intent.action.MEDIA_MOUNTED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".UserPoint"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication2"

        android:requestLegacyExternalStorage="true">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecordActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".RecordActivity1"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".HomeActivity1"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".FriendActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".AddPracticeActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".AddPracticeActivity1"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ShowPracticeActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ViewPracticeActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ViewPracticePlayActivity"
            android:screenOrientation="fullSensor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity1" />
        </activity>
        <activity
            android:name=".ViewFriendPracticePlayActivity"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".PlayActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".PlayPracticeActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".ShowAnalysisActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ViewAnalysisActivity"
            android:screenOrientation="fullSensor">
        </activity>
        <activity
            android:name=".EditPracticeActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".EditPracticeActivity1"
            android:screenOrientation="fullSensor" />
        <activity android:name=".GraphActivity"/>
        <activity android:name=".PieChart"/>
        <activity android:name=".LineChart"/>
        <activity android:name=".BarChart"/>
        <activity android:name=".ScatterPlot" />

        <activity android:name=".CommunityActivity"></activity>
        <activity android:name=".DetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CommunityActivity" />
        </activity>
        <activity android:name=".RegisterActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CommunityActivity" />
        </activity>
        <activity android:name=".ListActivity"></activity>
        <activity android:name=".PublicPracticeList">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FriendActivity" />
        </activity>
        <activity android:name=".AddFriendActivity"></activity>
    </application>

</manifest>